<h3>Create a Song</h3>
<%= form_for @song do |f| %>
    <p>Enter Song's Name: <%= f.text_field :name, placeholder: "song name" %></p>
    <p>Explicit         : <%= f.check_box :explicit %></p>
    <p>Album_id         : <%= f.number_field :album_id, placeholder: "album name" %></p>
    <p>Genre            : <%= f.text_field :genre, placeholder: "genre name" %></p>
    <p>Musica           : <%= f.file_field :song_file %></p>
