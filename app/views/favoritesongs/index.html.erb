<div class="favoritos pt-5">
    <div class="espaco1"></div>
    <!-- Album/Artista -->
    <div class="container text-light p-4">
        <div class="row">
            <div class="col text-center" >
                <h2>Bem-vindo às suas músicas favoritas,</h2>
                <h1 class="font-weight-bold"><%= @listener.user.name %>!</h1>
            </div>
        </div>
    </div>
    <div class="espaco1"></div>
    <!-- Músicas -->
    <div class="container text-monospace playlist p-3">
        <table class="table text-light">
            <caption  class="text-light font-weight-bold h5 pt-5"><%= link_to "Buscar novas músicas", songs_path, method: :get, style: 'color:#FFFFFF;' %></caption>
                <thead>
                    <tr class="">
                        <th scope="col" class="text-center"><i class="fa fa-music fa-2x" aria-hidden="true"></i></th>
                        <th scope="col"><h2>Nome</h2></th>
                        <th scope="col"><h2>Album</h2></th>
                        <th scope="col"><h2>Play</h2></th>
                    </tr>
                </thead>
                <tbody>
                <% @favorites.each do |favorito| %>
                    <tr class="">
                        <td scope="row" class="text-center"><%= link_to "<i class='fa fa-heart fa-lg'></i>".html_safe, delete_favoritesong_path(favorito), method: :delete, style: 'color:white;' %></td>
                        <td><h4><%= favorito.song.name %></h4></td>
                        <td><h4><%= favorito.song.album.name %></h4></td>
                        <td><%= audio_tag (url_for(favorito.song.file)), controls: true, class:'song' %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="espaco1"></div>
</div>